    <!--android:layout_width="145dp"-->
    <!--android:layout_height="134dp"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:layout_centerVertical="true"-->
    <!--app:srcCompat="@drawable/ic_iconmonstr_trash_can_5" />-->

</RelativeLayout>